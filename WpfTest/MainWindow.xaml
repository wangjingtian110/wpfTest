<Window x:Class="WpfTest.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfTest"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800" FontFamily="Microsoft YaHei">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>

        <Grid Grid.Row="0" Margin="10" HorizontalAlignment="Center" VerticalAlignment="Center">
            <Label Content="WPF控件使用示例" FontSize="50" ></Label>
        </Grid>
        <Border Grid.Row="1" BorderBrush="#FFC1C1C1" Background="#FF4482C8" BorderThickness="4,6,4,4" Padding="10">
            <Grid>
                <Button x:Name="button" Content="TabControl" HorizontalAlignment="Left" Height="32" VerticalAlignment="Center" Width="101" Background="White"/>
            </Grid>         
        </Border>

    </Grid>
</Window>
